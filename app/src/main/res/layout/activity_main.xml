<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cdl_container"
    tools:context="com.wangzh.zhihudaily.MainActivity">

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdl_viewpager_with_tabs_height"
        android:background="?attr/colorPrimary"
        app:pstsDividerColor="?attr/colorPrimaryDark"
        app:pstsIndicatorColor="@android:color/white"
        app:pstsIndicatorHeight="5dp"
        app:pstsUnderlineColor="@android:color/transparent"
        app:pstsUnderlineHeight="0dp">

    </com.astuetz.PagerSlidingTabStrip>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/mdl_viewpager_with_tabs_height"/>

    <include layout="@layout/mdl_toolbar_shadow"/>
</LinearLayout  >
